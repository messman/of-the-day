{
	"name": "oftheday-client",
	"private": true,
	"version": "3.1.0",
	"description": "Mobile-first web application to show of-the-day information.",
	"main": "index.js",
	"scripts": {
		"build": "webpack --config webpack.dev.js",
		"dev": "webpack --config webpack.dev.js",
		"dev:w": "webpack --config webpack.dev.js --watch",
		"dev:s": "webpack-dev-server --config webpack.dev.js",
		"static": "cd dist && python -m SimpleHTTPServer 8888",
		"production": "webpack --config webpack.prod.js",
		"production:w": "webpack --config webpack.prod.js --watch",
		"production:analyze": "PROD_ANALYZE=true webpack --config webpack.prod.js",
		"analyze-bundle": "webpack-bundle-analyzer --port 4200 dist/stats.json",
		"storybook": "start-storybook --port=58888"
	},
	"author": "Andrew Messier",
	"license": "MIT",
	"dependencies": {
		"@messman/react-common": "^2.0.5",
		"oftheday-shared": "file:../shared",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-is": "^17.0.2",
		"react-router-dom": "^5.2.0",
		"seamless-scroll-polyfill": "^1.2.3",
		"styled-components": "^5.2.1"
	},
	"devDependencies": {
		"@babel/core": "^7.13.13",
		"@babel/preset-env": "^7.13.12",
		"@babel/preset-react": "^7.13.13",
		"@svgr/webpack": "^5.5.0",
		"@types/node": "^14.14.37",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@types/react-router-dom": "^5.1.7",
		"@types/styled-components": "^5.1.9",
		"babel-loader": "^8.2.2",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^8.1.0",
		"html-webpack-plugin": "^5.3.1",
		"ts-loader": "^8.0.18",
		"typescript": "^4.2.3",
		"typescript-plugin-styled-components": "^1.4.4",
		"url-loader": "^4.1.1",
		"webpack": "^5.28.0",
		"webpack-bundle-analyzer": "^4.4.0",
		"webpack-cli": "^4.6.0",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.7.3"
	}
}
